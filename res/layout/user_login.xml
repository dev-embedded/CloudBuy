<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/user_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:text="user type :"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/user_type_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/user_type"
        android:layout_toRightOf="@id/user_type"
        android:entries="@array/user_type_name" />

    <TextView
        android:id="@+id/user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_type"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:text="user eamil         :"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/user_email_value"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_toRightOf="@id/user_email"
        android:inputType="text" />

    <TextView
        android:id="@+id/user_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_email"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:text="user password :"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/user_pass_value"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:layout_toRightOf="@id/user_pass"
        android:inputType="textPassword" />
    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="display password"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="130dp" />

    <Button
        android:id="@+id/login_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_pass"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="40dp"
        android:text="submit" />

    <Button
        android:id="@+id/login_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_pass"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@id/login_submit"
        android:text="cancel" />

</RelativeLayout>